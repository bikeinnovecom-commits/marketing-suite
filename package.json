{
  "name": "marketing-suite",
  "version": "0.1.0",
  "private":  true,
  "description": "Complete SEO & Digital Marketing Platform",
  "keywords": ["seo", "marketing", "ai", "saas", "analytics"],
  "repository": {
    "type": "git",
    "url": "https://github.com/bikeinnovecom-commits/marketing-suite. git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts":  {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^1.11.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
